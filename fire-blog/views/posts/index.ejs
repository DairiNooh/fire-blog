<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Posts</title>

<link rel="stylesheet" href="/stylesheets/posts/index.css">
</head>

<body>

<div id="home-container">

    <!-- NAVBAR -->
    <div id="home-nav">
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/posts">Posts</a></li>
            <li><a href="/posts/my-posts">My Posts</a></li>
            <li><a href="/posts/new">New Post</a></li>
            <% if (user) { %>
  <li><a href="/auth/sign-out">Sign Out</a></li>
<% } else { %>
  <li><a href="/auth/sign-in">Sign In</a></li>
<% } %>

        </ul>
    </div>

    <!-- MAIN -->
    <div id="home-main">

        <div class="posts-container">
            <% getAllPosts.forEach((post) => { %>
                <div class="box">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <a href="/posts/<%= post._id %>">Read more â†’</a>
                </div>
            <% }) %>
        </div>

    </div>

</div>

</body>
</html>
