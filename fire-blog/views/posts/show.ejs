<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= post.title %></title>

<!-- Bootstrap Icons -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
  rel="stylesheet"
/>

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    width: 100%;
    height: 100%;
    font-family: Arial, sans-serif;
    background-color: #0a0a0a;
    color: #ffffff;
}

/* NAVBAR */
#home-nav {
    height: 70px;
    width: 100%;
    background-color: rgba(5, 15, 40, 0.85);
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding-right: 30px;
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 25px;
}

.nav-links a {
    color: gray;
    text-decoration: none;
    font-weight: bold;
}

/* PAGE WRAPPER */
.page-wrapper {
    min-height: calc(100% - 70px);
    display: flex;
    justify-content: center;
    padding: 60px 0;
}

/* POST CONTAINER */
.post-container {
    width: 900px;
    background-color: rgba(5, 15, 40, 0.9);
    padding: 50px;
    border: 1px solid rgba(0, 191, 255, 0.35);
    display: flex;
    flex-direction: column;
}

/* TITLE */
.post-title {
    font-size: 2.6rem;
    margin-bottom: 25px;
    color: #00bfff;
}

/* CONTENT */
.post-content p {
    font-size: 1.15rem;
    line-height: 1.8;
    margin-bottom: 30px;
    color: #e6e6e6;
}

/* ACTIONS */
.post-actions {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
}

.action-btn {
    padding: 8px 14px;
    background-color: transparent;
    border: 1px solid #00bfff;
    color: #00bfff;
    text-decoration: none;
    cursor: pointer;
}

.action-btn:hover {
    background-color: #00bfff;
    color: #000;
}

/* LIKE BUTTON */
.like-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.4rem;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 6px;
}

.bi-heart {
    color: #00bfff;
}

.bi-heart-fill {
    color: #ff4d6d;
}

/* DIVIDER (ONLY ONE) */
.divider {
    height: 1px;
    background-color: rgba(0, 191, 255, 0.3);
    margin: 40px 0;
}

/* COMMENTS */
.comment {
    padding: 16px 0;
}

.comment-user {
    font-weight: bold;
    color: #00bfff;
    margin-bottom: 6px;
}

.comment-text {
    font-size: 1.05rem;
    line-height: 1.6;
    color: #e6e6e6;
}

/* COMMENT ACTIONS */
.comment-actions {
    margin-top: 10px;
    display: flex;
    gap: 15px;
    align-items: center;
}

/* COMMENT FORM */
.comment-form textarea {
    width: 100%;
    height: 120px;
    resize: none; /* ðŸ”’ disable dragging */
    background-color: #050f28;
    border: 1px solid rgba(0, 191, 255, 0.35);
    color: #fff;
    padding: 12px;
    margin-bottom: 12px;
}

.comment-form button {
    padding: 8px 14px;
    border: none;
    background-color: #00bfff;
    color: #000;
    cursor: pointer;
}

.comment-form button:hover {
    background-color: #009acd;
}
</style>
</head>

<body>

<!-- NAV -->
<div id="home-nav">
    <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/posts">Posts</a></li>
        <li><a href="/posts/my-posts">My Posts</a></li>
        <li><a href="/posts/new">New Post</a></li>
        <% if (user) { %>
  <li><a href="/auth/sign-out">Sign Out</a></li>
<% } else { %>
  <li><a href="/auth/sign-in">Sign In</a></li>
<% } %>

    </ul>
</div>

<!-- PAGE -->
<div class="page-wrapper">
<div class="post-container">

    <!-- TITLE -->
    <h1 class="post-title"><%= post.title %></h1>

    <!-- CONTENT -->
    <div class="post-content">
        <p><%= post.content %></p>
    </div>

    <!-- POST ACTIONS -->
    <div class="post-actions">

        <% if (user) { %>
            <% const liked = post.likes.some(like => like.user_id.equals(user._id)) %>

            <form action="/posts/<%= post._id %>/like" method="POST">
                <button class="like-btn" type="submit">
                    <i class="bi <%= liked ? 'bi-heart-fill' : 'bi-heart' %>"></i>
                    <span><%= post.likes.length %></span>
                </button>
            </form>
        <% } else { %>
            <span><i class="bi bi-heart"></i> <%= post.likes.length %></span>
        <% } %>

        <% if (user && post.creator_id.equals(user._id)) { %>
            <a class="action-btn" href="/posts/<%= post._id %>/edit">Edit</a>

            <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <button class="action-btn" type="submit">Delete</button>
            </form>
        <% } %>
    </div>

    <!-- SINGLE DIVIDER -->
    <div class="divider"></div>

    <!-- COMMENTS -->
    <h2 style="margin-bottom:20px;color:#00bfff;">Comments</h2>

    <% postComments.forEach(comment => { %>
        <div class="comment">
            <div class="comment-user"><%= comment.creator_id.username %></div>
            <div class="comment-text"><%= comment.text %></div>

            <div class="comment-actions">
                <% if (user) { %>
                    <% const liked = comment.likes.some(like => like.user_id.equals(user._id)) %>

                    <form action="/comments/<%= comment._id %>/like" method="POST">
                        <button class="like-btn" type="submit">
                            <i class="bi <%= liked ? 'bi-heart-fill' : 'bi-heart' %>"></i>
                            <span><%= comment.likes.length %></span>
                        </button>
                    </form>
                <% } else { %>
                    <span><i class="bi bi-heart"></i> <%= comment.likes.length %></span>
                <% } %>

                <% if (user && comment.creator_id._id.equals(user._id)) { %>
                    <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST">
                        <button class="action-btn" type="submit">Delete</button>
                    </form>
                    <a class="action-btn" href="/comments/<%= comment._id %>/edit">Edit</a>
                <% } %>
            </div>
        </div>
    <% }) %>

    <!-- ADD COMMENT -->
    <% if (user) { %>
        <form class="comment-form" action="/comments" method="POST">
            <input type="hidden" name="post_id" value="<%= post._id %>">
            <textarea name="text" required></textarea>
            <button type="submit">Add Comment</button>
        </form>
    <% } else { %>
        <p><a href="/auth/sign-in">Sign in</a> to comment</p>
    <% } %>

</div>
</div>

</body>
</html>
